<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecorderActivity">

    <Button
        android:id="@+id/recorder2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="235dp"
        android:layout_marginTop="83dp"
        android:text="record2" />

    <Button
        android:id="@+id/recorder1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="82dp"
        android:text="record1" />

    <Button
        android:id="@+id/play1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play1Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="164dp"
        android:layout_marginBottom="0dp"
        android:text="Play1" />

    <Button
        android:id="@+id/play2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/play1Button"
        android:layout_alignBottom="@+id/play2Button"
        android:layout_alignParentTop="true"
        android:layout_marginStart="194dp"
        android:layout_marginTop="166dp"
        android:layout_marginBottom="0dp"
        android:text="Play2" />

    <Button
        android:id="@+id/alchemyButton"
        android:layout_width="115dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="232dp"
        android:layout_toEndOf="@+id/recorder1Button"
        android:text="Alchemy" />

    <Button
        android:id="@+id/linkStartButton"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="333dp"
        android:text="Link Start" />

</RelativeLayout>