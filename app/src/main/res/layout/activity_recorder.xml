<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecorderActivity">

    <Button
        android:id="@+id/recorder2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="35dp"
        android:text="record2" />

    <Button
        android:id="@+id/recorder1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="84dp"
        android:text="record1" />

    <Button
        android:id="@+id/play1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="168dp"
        android:text="Play1" />

    <Button
        android:id="@+id/play2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="35dp"
        android:text="Play2" />

    <Button
        android:id="@+id/alchemyButton"
        android:layout_width="115dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="233dp"
        android:text="Alchemy" />

    <Button
        android:id="@+id/linkStartButton"
        android:layout_width="148dp"
        android:layout_height="62dp"
        android:layout_below="@+id/alchemyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Link Start" />

</RelativeLayout>